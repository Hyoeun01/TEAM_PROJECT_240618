<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.com.example.hotel_arcana.mapper.NoticeMapper">

<!--    현재시간-->
    <select id="getTime" resultType="string">
        SELECT now()
    </select>


    <select id="selectAll" resultType="org.com.example.hotel_arcana.dto.NoticeDTO">
        SELECT * FROM tbl_todo ORDER BY tno DESC
    </select>


    <insert id="insert">
        INSERT INTO tbl_todo (title,dueDate,writer)
        VALUES (#{title}, #{dueDate}, #{writer})
    </insert>